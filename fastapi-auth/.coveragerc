[run]
# Coverage configuration for VoicePartnerAI

source = .
omit = 
    # Test files
    tests/*
    test_*.py
    *_test.py
    
    # Virtual environment
    venv/*
    .venv/*
    env/*
    .env/*
    
    # Third-party packages
    */site-packages/*
    */dist-packages/*
    
    # Configuration and setup files
    setup.py
    conftest.py
    */migrations/*
    alembic/*
    
    # Development tools
    */.pytest_cache/*
    */htmlcov/*
    .coverage
    
    # Main entry points (usually simple and don't need testing)
    main.py
    main_with_error_handling.py
    
    # Example and documentation files
    developer_examples.py
    enhanced_api_docs.py
    
    # Migration files
    migration_*.py

[report]
# Reporting configuration
precision = 2
show_missing = true
skip_covered = false
skip_empty = true

# Fail if coverage is below this percentage
fail_under = 80

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if 0:
    if False:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Don't complain about type checking imports
    if TYPE_CHECKING:
    
    # Don't complain about logging statements
    logger\.debug
    logger\.info
    
    # Don't complain about pass statements
    pass

[html]
# HTML report configuration
directory = htmlcov
title = VoicePartnerAI Test Coverage Report

[xml]
# XML report configuration (for CI/CD)
output = coverage.xml