# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
# Domain Configuration
DOMAIN=voicepartner.ai
CERT_EMAIL=admin@voicepartner.ai

# SSL Settings
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Worker Configuration
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEP_ALIVE=5

# Memory Limits
MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=512mb

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
