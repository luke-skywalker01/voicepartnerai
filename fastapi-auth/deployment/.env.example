# MONITORING & ALERTING
# ============================================================================
# Monitoring
MONITORING_ENABLED=true
METRICS_EXPORT_INTERVAL=30

# Email Alerts
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_FROM=alerts@voicepartner.ai
ALERT_EMAIL_TO=admin@voicepartner.ai,ops@voicepartner.ai

